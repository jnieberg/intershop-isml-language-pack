{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ISML",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#comments-short"
		},
		{
			"include": "#iscomments"
		},
		{
			"include": "#html-if"
		},
		{
			"include": "#jsp"
		},
		{
			"include": "#quoted-double"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#markup"
		},
		{
			"include": "#attributes"
		}
	],
	"repository": {
		"markup": {
			"name": "keyword.control.isml",
			"begin": "</?(i|I)(s|S)\\w*?\\b",
			"end": ">",
			"patterns": [
				{
					"include": "#variables"
				},
				{
					"include": "#quoted-double"
				},
				{
					"include": "#attributes"
				}
			]
		},
		"attributes": {
			"patterns": [
				{
					"name": "entity.name.function.isml",
					"match": "\\b[\\w\\d\\-]+?="
				}
			]
		},
		"quoted-double": {
			"name": "string.quoted.double.isml",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"include": "#variables"
				},
				{
					"include": "#markup"
				}
			]
		},
		"quoted-single": {
			"name": "markup.quote.isml",
			"begin": "'",
			"end": "'"
		},
		"jsp": {
			"name": "support.class.isml",
			"begin": "<%",
			"end": "%>"
		},
		"variables": {
			"name": "variable.isml",
			"begin": "#",
			"end": "#",
			"patterns": [
				{
					"include": "#quoted-single"
				}
			]
		},
		"comments-short": {
			"name": "comment.isml",
			"begin": "<!--(?!\\[)",
			"end": "[^\\]]-->",
			"patterns": [
				{
					"include": "#html-if"
				}
			]
		},
		"comments": {
			"name": "comment.isml",
			"begin": "<!---",
			"end": "--->"
		},
		"iscomments": {
			"name": "comment.isml",
			"begin": "<iscomment>",
			"end": "</iscomment>"
		},
		"html-if": {
			"patterns": [
				{
					"name": "comment.isml",
					"match": "<!--\\[.*?\\]>"
				},
				{
					"name": "comment.isml",
					"match": "<!\\[.*?\\]-->"
				}
			]
		}
	},
	"scopeName": "source.isml"
}